set nobackup
set noswapfile

set autoread

set number

set backspace=indent,eol,start

set directory=~/Temps
set omnifunc=syntaxcomplete#Complete

function! RTrim() 
  let s:cursor = getpos(“.”)
  %s/\s\+$//e
  call setpos(“.”, s:cursor)
endfunction

autocmd BufWritePre *.php,*.rb,*.js,*.bat call RTrim()
